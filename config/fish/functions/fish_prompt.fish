function fish_prompt
  # ============================================================================
  # Line 1
  # ============================================================================

  # Give it some space to breathe
  echo

  # ============================================================================
  # Line 2
  # ============================================================================

  # Current directory
  set_color $fish_color_cwd
  echo -n $(prompt_pwd)
  set_color normal

  # Git info
  echo (fish_git_prompt "  ≡  %s")

  # ============================================================================
  # Line 3
  # ============================================================================

  # Actual prompt
  set_color magenta
  echo -n "❱ "
  set_color normal
end
